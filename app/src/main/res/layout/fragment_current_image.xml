<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="td.brandon.garbageguru.CurrentImageFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="18"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/objectImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="@android:color/black"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:weightSum="13"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:padding="10dp"
            android:weightSum="4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noDisposalText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:text="@string/no_disposal_text"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textAllCaps="true"
                android:textSize="18dp"/>

            <ImageView
                android:id="@+id/bluebinimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/bluebinpic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/greenbinimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/greenbinpic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/greybinimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/greybinpic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/hhwimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/hhwpic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/prohibitedimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/prohibitedpic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/scrapmetalimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/scrapmetalpic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/transferstationimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/transferstationpic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/yardwasteimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/yardwastepic"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ewasteimage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ewastepic"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/objectName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:background="@android:color/white"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="18dp"/>
    </LinearLayout>

</LinearLayout>